# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:

for cxx in [builder.x86, builder.x64]:
    if cxx is None:
        continue

    if cxx.like('gcc'):
        cxx.cflags += [
          '-Wall',
          '-Werror'
        ]
    elif cxx.like('msvc'):
        cxx.cflags += ['/WX']

    program = cxx.Program('sample')
    program.sources += [
      'main.cpp',
    ]
    builder.Add(program)
